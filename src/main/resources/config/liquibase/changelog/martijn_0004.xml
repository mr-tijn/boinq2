<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
	<changeSet author="martijn" id="add columns for field match criterion">
		<addColumn tableName="t_featureselectcriterion">
			<column name="match_name" type="VARCHAR(255)" />
			<column name="path_expression" type="VARCHAR(255)" />
			<column name="exact_match" type="BOOLEAN" />
			<column name="min_double" type="DOUBLE" />
			<column name="max_double" type="DOUBLE" />
			<column name="match_double" type="DOUBLE" />
			<column name="min_long" type="BIGINT" />
			<column name="max_long" type="BIGINT" />
			<column name="match_long" type="BIGINT" />
			<column name="match_string" type="VARCHAR(255)" />
			<column name="term_uri" type="VARCHAR(255)" />
			<column name="term_label" type="VARCHAR(255)" />
		</addColumn>
	</changeSet>
	<changeSet author="martijn" id="add column for strand match">
		<addColumn tableName="t_featurejoin">
			<column name="same_strand" type="BOOLEAN" />
		</addColumn>
	</changeSet>
	<changeSet author="martijn" id="add columns to featurequery">
		<addColumn tableName="t_featurequery">
			<column name="target_graph" type="VARCHAR(255)"/>
			<column name="reference_assembly_uri" type="VARCHAR(255)"/>
		</addColumn>
	</changeSet>
	<changeSet author="martijn" id="add analysis table">
		<createTable tableName="T_ANALYSIS">
			<column autoIncrement="true" name="id" type="BIGINT"  startWith="99">
				<constraints primaryKey="true"/>
            </column>
			<column name="name" type="VARCHAR(255)"/>
			<column name="status" type="INTEGER"/>
			<column name="type" type="VARCHAR(255)"/>
			<column name="description" type="TEXT"/>
			<column name="error_description" type="TEXT"/>
		</createTable>
		<createTable tableName="T_PROGRESS">
			<column name="analysis_id" type="BIGINT"/>
			<column name="reference" type="VARCHAR(255)"/>
			<column name="percentage" type="FLOAT"/>
		</createTable>
		<addForeignKeyConstraint baseColumnNames="analysis_id" baseTableName="T_PROGRESS" constraintName="fk_progressToAnalysis" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="T_ANALYSIS"/>
	</changeSet>
	<changeSet author="martijn" id="add connector table">
		<createTable tableName="T_FEATURECONNECTOR">
			<column autoIncrement="true" name="id" type="BIGINT"  startWith="99">
				<constraints primaryKey="true"/>
            </column>
			<column name="name" type="VARCHAR(255)"/>
			<column name="path_expression" type="VARCHAR(255)" />
			<column name="type" type="INT" />
		</createTable>
		<addColumn tableName="T_FEATUREJOIN">
			<column name="source_connector_id" type="BIGINT" startWith="99"/>
			<column name="target_connector_id" type="BIGINT" startWith="99"/>
		</addColumn>
		<addForeignKeyConstraint baseColumnNames="source_connector_id" baseTableName="T_FEATUREJOIN" constraintName="fk_featureJoinToSourceConnector" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="T_FEATURECONNECTOR"/>
		<addForeignKeyConstraint baseColumnNames="target_connector_id" baseTableName="T_FEATUREJOIN" constraintName="fk_featureJoinToTargetConnector" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="T_FEATURECONNECTOR"/>
	</changeSet>
	
</databaseChangeLog>