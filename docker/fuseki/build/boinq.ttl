@prefix :      <http://base/#> .
@prefix tdb:   <http://jena.hpl.hp.com/2008/tdb#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix ja:    <http://jena.hpl.hp.com/2005/11/Assembler#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix fuseki: <http://jena.apache.org/fuseki#> .

:boinqData a      tdb:DatasetTDB ;
    tdb:location "/mnt/graphs/boinqTDB" ;
    # Query timeout on this dataset (1s, 100 seconds)
    ja:context [ ja:cxtName "arq:queryTimeout" ;  ja:cxtValue "100000" ] ;
    # Make the default graph be the union of all named graphs.
    tdb:unionDefaultGraph true .

:boinqService  a                          fuseki:Service ;
        fuseki:dataset                :boinqData ;
        fuseki:name                   "boinq" ;
        fuseki:serviceQuery           "query" , "sparql" ;
        fuseki:serviceReadGraphStore  "get" ;
        fuseki:serviceReadWriteGraphStore
                "data" ;
        fuseki:serviceUpdate          "update" ;
        fuseki:serviceUpload          "upload" .
